            <div class="col-md-8 pl-5 pr-5">

                <form action="/write_post" method="POST" class="mb-5 border p-3 rounded">
                  <div class="form-group">
                    <label for="p_text"><b>Post</b></label>
                    <input type="text" class="form-control" style="height: 10rem" name="p_text" placeholder="write a post..">

                  </div>
                  <select name="p_area" class="form-control mb-2">
                      <option selected disabled>Categories</option>
                      <option value="Ders Notları">Ders Notları</option>
                      <option value="Yurtlar">Yurtlar</option>
                      <option value="Genel">Genel</option>
                  </select>
                  <div class="overflow-auto">
                    <button type="submit" class="btn btn-primary float-right mt-2">Submit</button>
                  </div>
                </form>
<!-------------------------------------------------------------------------------------------------------------------->
<% for(var i=0; i<all_post.length; i++) {%>
                  <div class="card mb-5">
                      <h5 class="card-header"><%= all_post[i].p_area%></h5>
                      <div class="card-body">
                            <h5 class="card-title"> <%= all_post[i]["user.name"] %> <%= all_post[i]["user.surname"] %></h5>
                            <p class="card-text" style="font-size: 1.1rem"><%= all_post[i].p_text %></p>
                            <div class="mb-4">
                                  <span class="text-muted">
                                   <%= all_post[i].user_id %>
                                  </span>
                                  <span class="float-right">
                                      <button href="#click" class="btn  btn-primary "><i class="fas fa-comment"></i></button>
                                      <button href="#" class="btn  btn-danger "><i class="fas fa-thumbs-up"></i></button>
                                  </span>
                            </div>
                      <% for(var j=0; j<all_comment.length; j++) {%>
                        <%if (all_comment[j].post_id === all_post[i].post_id) { %>
                            <div class="media  border rounded mt-5 p-3">
                                  <div class="media-body">
                                        <h5 class="mt-0"><%= all_comment[i]["user.name"] %> <%= all_comment[i]["user.surname"] %></h5>
                                        <div style="font-size: 0.85rem">
                                           <%= all_comment[j].c_text %>
                                        </div>
                                        <div class="text-muted text-right">
                                          <%= all_comment[j].user_id %>
                                        </div>


                                  </div>
                            </div>
                        <% } %>
                      <% } %>
                            <form action="/write_comment" method="POST" class="mb-1 mt-2 border p-3 rounded">
                              <div class="form-group" id="click">
                                <label for="yazı"><b>Comment</b></label>
                                <input type="text" class="form-control" style="height: 10rem" name="c_text" placeholder="write a comment..">                                
                              </div>
                              <button type="submit" class="btn btn-primary">Submit</button>
                              <input type="hidden" name="post_id" style="display: none" value="<%=all_post[i].post_id%>">
                            </form>
                            

                      </div>
                      <div class="card-footer text-muted">
                        2 days ago
                      </div>
                </div>
<% } %>
