<!DOCTYPE html>
<html lang="en">

<%- include ('partials/head') -%>

	<body>

        <%- include ('partials/navbar') -%>
			<div class="container" style="min-height: 33rem;">
				<div class="main-body  mt-5">
					<div class="row">
						<div class="col-lg-4">
							<div class="card">
								<div class="card-body">
									<div class="d-flex flex-column align-items-center text-center">
										<img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin"
											class="rounded-circle p-1 bg-primary" width="110">
										<div class="mt-3">
											<h4>
												<%= profile.name%>
													<%= profile.surname%>
											</h4>
											<!-- <p class="text-secondary mb-1">Full Stack Developer</p> -->
											<p class="text-muted font-size-sm">
												<%= profile.about%>
											</p>
											<!-- <button class="btn btn-primary">Follow</button>
									<button class="btn btn-outline-primary">Message</button> -->
										</div>
									</div>


								</div>
							</div>
						</div>
						<div class="col-lg-8">
							<form action="/profile/<%= profile.user_id%>/updated" method="POST">
								<div class="card mb-4">
									<div class="card-body">
										<div class="row mb-3">
											<div class="col-sm-3">
												<h6 class="mb-0">Full Name</h6>
											</div>
											<div class="col-sm-9 text-secondary">
												<input type="text" class="form-control" disabled
													value="<%= profile.name%> <%= profile.surname%>">
											</div>
										</div>
										<div class="row mb-3">
											<div class="col-sm-3">
												<h6 class="mb-0">Student ID</h6>
											</div>
											<div class="col-sm-9 text-secondary">
												<input type="text" class="form-control" disabled
													value="<%= profile.user_id%>">
											</div>
										</div>
										<div class="row mb-3">
											<div class="col-sm-3">
												<h6 class="mb-0">Email</h6>
											</div>
											<div class="col-sm-9 text-secondary">
												<input type="text" name="mail" class="form-control"
													value="<%= profile.mail%>">
											</div>
										</div>
										<div class="row mb-3">
											<div class="col-sm-3">
												<h6 class="mb-0">University</h6>
											</div>
											<div class="col-sm-9 text-secondary">
												<input type="text" name="school" class="form-control"
													value="<%= profile.school%>">
											</div>
										</div>
										<div class="row mb-3">
											<div class="col-sm-3">
												<h6 class="mb-0">Class</h6>
											</div>
											<div class="col-sm-9 text-secondary">
												<input type="text" name="class" class="form-control"
													value="<%= profile.class%>">
											</div>
										</div>
										<div class="row mb-3">
											<div class="col-sm-3">
												<h6 class="mb-0">Department</h6>
											</div>
											<div class="col-sm-9 text-secondary">
												<input type="text" name="department" class="form-control"
													value="<%= profile.department%>">
											</div>
										</div>
										<div class="row">
											<div class="col-sm-3"></div>
											<div class="col-sm-9 text-secondary">
												<input type="submit" class="btn btn-primary px-4" value="Save Changes">
											</div>
										</div>
									</div>
								</div>
							</form>
							<div class="row mb-5">
								<% for(var i=0; i<all_post.length; i++) {%>
									<div class="col-sm-12 mb-3" >
										<div class="card mb-2">
											<div class="card-body">
												<div class="media forum-item">
													<a href="javascript:void(0)" class="card-link">
														<img src="https://bootdey.com/img/Content/avatar/avatar1.png"
															class="rounded-circle" width="50" alt="User" />
														<small class="d-block text-center text-muted">Newbie</small>
													</a>
													<div class="media-body ml-3">
														<a href="javascript:void(0)" class="text-secondary">
															<%= profile.name%>
																<%= profile.surname%>
														</a>
														<small class="text-muted ml-2">
															<%= all_post[i].time%>
														</small>
														<h5 class="mt-1">
															<%= all_post[i].p_area%>
														</h5>
														<div class="mt-3 font-size-sm">
															<p>
																<%= all_post[i].p_text%>
															</p>
														</div>
														<form
															action="/profile/<%= profile.user_id%>/delete_post/<%= all_post[i].post_id%>">
															<button type="submit" class="btn btn-danger float-right"><i
																	class="far fa-trash-alt"></i> Delete</button>
														</form>
													</div>

												</div>
											</div>
										</div>
									</div>
									<% } %>
							</div>
						</div>
					</div>
				</div>
			</div>
			<%- include ('partials/footer') -%>
	</body>

</html>